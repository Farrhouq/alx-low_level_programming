CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
        $(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(wildcard *~) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
